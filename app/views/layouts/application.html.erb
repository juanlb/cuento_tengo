                <li class="divider-vertical"></li>
                <li><%= link_to "Categor&iacute;as", :controller => "categories" %></li>
                <li><%= link_to "Cuentas", :controller => "accounts" %></li>

              </ul>
            <% end -%>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <%= yield %>

  </body>
