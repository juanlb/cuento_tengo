      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

  </head>

  <body>

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <% if flash[:notice] -%>
          <div id="flash" class="alert alert-success">
            <%= flash[:notice] %>
          </div>
          <script type="text/javascript">
            Effect.Fade('flash', { duration: 3.0 });
          </script>
        <% end -%>
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <%= link_to "Cuanto tengo?", {:controller => "moves", :action => "index"}, :class => "brand" %>
          <div class="nav-collapse collapse">
            <p class="navbar-text pull-right">
              <% if  logged_in? -%>
                <%= current_user.login.camelcase %> | <%= link_to "Salir", "/logout", :class => "navbar-link"%>
              <% else -%>
                <%= link_to "Entrar", "/login", :class => "navbar-link"%> | <%= link_to "Registrarse", "/signup", :class => "navbar-link"%>
              <% end -%>
            </p>
            <% if  logged_in? -%>
              <ul class="nav">
                <li><%= link_to "Movimientos", :controller => "moves" %></li>
                <li><%= link_to "Cuotas", :controller => "fees" %></li>
                <li><%= link_to "Previsiones programadas", :controller => "sched_previsions" %></li>
                <li><%= link_to "Presupuestos", :controller => "budgets" -%></li>
