<%# stylesheet_link_tag 'layout' %>
<%# stylesheet_link_tag 'forms' %>

    <%= stylesheet_link_tag 'bootstrap' %>
<%# stylesheet_link_tag 'layout' %>

    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }
    </style>
    <%= stylesheet_link_tag 'bootstrap-responsive' %>
    <%= stylesheet_link_tag 'custom' %>
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
