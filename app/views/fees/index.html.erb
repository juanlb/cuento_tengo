
<div class="container-fluid">
  <div class="row-fluid">

    <%= render :partial => "moves/side_accounts_categories" %>

    <div class="span9">

      <div class="well fee">
        <%= render :partial => @create_form %>
      </div>

      <% if @show_prevs -%>
        <div class="well">

        </div>
      <% end -%>
      <div class="well well-small fee">
        <h4>Gasto en cuotas</h4>
        <table class="table table-striped table-condensed table-bordered">
          <tr>
            <th>Descripci&oacute;n</th>
            <th>Categoria</th>
            <th>Cuenta</th>
            <th>Cantidad cuotas</th>
            <th colspan="2">Monto cuota</th>


          </tr>

          <% @fees.each do |fee| %>
            <tr>


              <td><%=h fee.description %></td>
              <td><%=h fee.category.name unless fee.category.blank? %></td>
              <td><%= fee.account.name %></td>
              <%  valor = format("%.2f\n",fee.amount * fee.operation)%>
              <td class="td_numero"><%=h fee.fee_cant %></td>
              <td class="td_numero"><%= fee.operation != 1 ? ( valor) : "<b>#{valor}</b>" %></td>

              <td width="35px">
                <%= link_to '', {:action => 'show', :id => fee.id}, :class => 'icon-eye-open' %>
                <%= link_to '', fee, :confirm => 'Â¿Eliminar cuotas? Se eliminaran todos los movimientos creados.', :method => :delete, :class => 'icon-trash' %>
              </td>
            </tr>
          <% end %>
        </table>

        <br />

      </div>


    </div>
  </div>
</div>

