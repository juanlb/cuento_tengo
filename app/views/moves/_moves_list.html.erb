<h4>Movimientos</h4>
<table class="table table-striped table-condensed table-bordered">
  <tr>
    <th></th>
    <th>Fecha</th>
    <th>Descripci&oacute;n</th>
    <th>Categoria</th>
    <th>Cuenta</th>
    <th colspan="2">Monto</th>
  </tr>

  <% @moves.each do |move| %>


    <tr>
      <td width="15px">
        <% if not move.feemove.nil? -%>
          <%= link_to '', {:controller => "fees", :action => "show", :id => move.feemove.fee.id}, :hint => 'Editar', :class => 'icon-list-alt' %>
        <% end -%>

      </td>
      <td><%=h move.created_at.strftime("%d/%m/%Y") %></td>
      <td><%=h move.description %></td>
      <td><%=h move.category.name unless move.category.blank? %></td>
      <td><%= move.account.name %></td>
      <%  valor = format("%.2f\n",move.amount * move.operation)%>
      <td class="td_numero"><%= move.operation != 1 ? ( valor) : "<b>#{valor}</b>" %></td>

      <td width="35px">
        <%= link_to '', {:action => "edit", :id => move}, :hint => 'Editar', :class => 'icon-edit' %>
        <%= link_to '', move, :confirm => 'Â¿Borrar movimiento?', :method => :delete, :class => 'icon-trash' %>
      </td>
    </tr>
  <% end %>
</table>
