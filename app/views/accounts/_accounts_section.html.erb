<h4>Cuentas</h4>
<small>
  <%= link_to_if @side_con_form, 'Marcar todas', false, :onclick => "acc_todos(); return false;" %> |
  <%= link_to_if @side_con_form, 'Desmarcar todas', false, :onclick => "acc_ninguno(); return false;" %>
</small>
<div id="lista_cuentas">
  <table class="table table-striped table-condensed table-bordered">
    <%= render :partial => "/accounts/account", :collection => @accounts%>

    <tr>
      <td colspan="3">
        <b><%= link_to "Nueva cuenta", new_account_path %></b>
      </td>
    </tr>
  </table>
</div>
<script language="javascript">
  function acc_todos() {
<% @accounts.each do |acc| -%>
      $('account_<%= acc.id %>').checked = true;
<%  end -%>
  }

  function acc_ninguno() {
<% @accounts.each do |acc| -%>
      $('account_<%= acc.id %>').checked = false;
<%  end -%>
  }
</script>