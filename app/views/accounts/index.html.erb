<div class="container-fluid">
  <div class="row-fluid">
    <div class="span5 offset3">
      <div class="well">

        <h1>Cuentas</h1>
        <table class="table table-striped  table-bordered">
          <tr>
            <th>Nombre</th>
            <th>Moneda</th>
            <th colspan="2">Saldo inicial</th>
          </tr>
          <% @accounts.each do |account| %>
            <tr>
              <td><%=h account.name %></td>
              <td><%=h account.currency.name %></td>
              <td class="td_numero"><%=h account.initial %></td>
              <td  width="35px">
                <%= link_to '', edit_account_path(account), :class => 'icon-edit' %>
                <%= link_to '', account, :confirm => 'Â¿Eliminar cuenta?', :method => :delete, :class => 'icon-trash' %>
              </td>
            </tr>
          <% end %>
        </table>
        <br />
        <%= link_to 'Crear Cuenta', new_account_path, :class => 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>