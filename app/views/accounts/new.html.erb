
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span5 offset3">
      <div class="well">

        <h1>Nueva Cuenta</h1>

        <% form_for(@account) do |f| %>
          <%= f.error_messages %>

          <%= hidden_field_tag "account[user_id]", current_user.id %>

          <p>
            <%= f.label "Nombre" %>
            <%= f.text_field :name %>
          </p>
          <p>
            <%= f.label "Saldo inicial" %>
            <%= f.text_field :initial %>
          </p>
          <p>
            <%= f.label "Moneda" %>
            <%= f.select :currency_id, @currencies.collect {|z| [z.name, z.id]} %>
          </p>
          <p>
          <div class="row-fluid">
            <div class="span1">
              <%= link_to 'Cancelar', {:action => 'cancel'}, :class => 'btn' %>
            </div>
            <div class="span1 offset9">
              <%= f.submit 'Crear', :class => 'btn btn-primary' %>
            </div>
          </div>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>