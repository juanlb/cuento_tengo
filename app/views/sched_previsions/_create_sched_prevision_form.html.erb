<% form_for @sched_prevision  do |f| %>
  <%= f.error_messages %>

  <ul class="nav nav-pills">
    <li class="active"><a href="#">Previsiones programadas por mes</a></li>
  </ul>
  <div class="row-fluid">
    <div class="span12">
      <%= radio_button_tag 'operation', 'out', true %> Gasto
      <%= radio_button_tag 'operation', 'in' %> Dep&oacute;sito
    </div>
    <div class="row-fluid">
      <div class="span3">
        <%= f.label "Descripci&oacute;n" %>
        <%= f.text_field :description, :size => 20 %>
      </div>
      <div class="span2">
        <%= f.label "D&iacute;a del mes" %>
        <%= f.select :apply_day, @num_day.collect {|z| [z, z]} %>
      </div>
      <div class="span2">
        <%= f.label "Categor&iacute;a" %>
        <%= f.select :category_id, @categories.collect {|z| [z.format_name, z.id]}, { :include_blank => true } %>
      </div>
      <div class="span3">
        <%= f.label "Cuenta" %>
        <%= f.select :account_id, @accounts.collect {|z| [z.name, z.id]} %>
      </div>
      <div class="span1">
        <%= f.label "Monto" %>
        <%= f.text_field :amount, :size => 10 %>
      </div>
      <div class="span1">
        <%= f.label "&nbsp;" %>
        <%= f.submit 'Crear', :class => 'btn btn-primary' %>
      </div>
    </div>
  </div>

<% end %>