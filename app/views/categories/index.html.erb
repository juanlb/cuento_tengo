<div class="container-fluid">
  <div class="row-fluid">
    <div class="span5 offset3">
      <div class="well">
        <h1>Categor&iacute;as</h1>

        <table class="table table-striped  table-bordered">
          <tr>
            <th colspan="2">Nombre</th>
          </tr>
          <% @categories.each do |category| %>
            <tr>
              <td><%=h category.name %></td>
              <td  width="35px">
                <%= link_to '', edit_category_path(category), :class => 'icon-edit' %>
                <%= link_to '', category, :confirm => '¿Eliminar categoria?', :method => :delete, :class => 'icon-trash' %>
              </td>
            </tr>
            <% category.children_categories.each do |child| %>
              <tr>
                <td><%=h child.format_name %></td>
                <td  width="35px">
                  <%= link_to '', edit_category_path(child), :class => 'icon-edit' %>
                  <%= link_to '', child, :confirm => '¿Eliminar categoria?', :method => :delete, :class => 'icon-trash' %>
                </td>
              </tr>
            <% end -%>
          <% end %>
        </table>
        <br />

        <%= link_to 'Crear categor&iacute;a', new_category_path, :class => 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>